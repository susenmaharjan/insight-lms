@using InsightWorkshop.Lms.ViewModels

@model LoginViewModel
@{
    ViewData["Title"] = "Home Page";
}


@if (Model != null && !Model.Success)
{
    <div class="container">
        <div class="alert-danger">
            Invalid user
        </div>
    </div>
}


<div class="container">
    <h3>Login</h3>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="LoginUser">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="User.Username" class="control-label"></label>
                    <input asp-for="User.Username" class="form-control" />
                    <span asp-validation-for="User.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.Password" class="control-label"></label>
                    <input asp-for="User.Password" class="form-control" type="password" />
                    <span asp-validation-for="User.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                    <a class="btn btn-info" asp-area="" asp-controller="Home" asp-action="Registration">Registration</a>
                </div>
            </form>
        </div>
    </div>
</div>


